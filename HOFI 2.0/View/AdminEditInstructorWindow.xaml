<Window x:Class="View.AdminEditInstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="AdminEditInstructorWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="421" Stroke="Black" VerticalAlignment="Top" Width="1" Margin="142,0,0,-0.333"/>
        <TextBox x:Name="tb_AdminNewInstructorEmail" Text="{Binding Instructor.Mail, Mode=TwoWay, UpdateSourceTrigger=Explicit}" HorizontalAlignment="Left" Height="23" Margin="293,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Label Content="Indtast ny Email:" HorizontalAlignment="Left" Margin="155,115,0,0" VerticalAlignment="Top" Width="102"/>
        <Button Content="Opdater Email" HorizontalAlignment="Left" Margin="484,119,0,0" VerticalAlignment="Top" Width="80" Click="Btn_AdminUpdateEmail_Click" Height="23"/>
        <TextBlock Text="{Binding ReturnMessageEditInstructorsWindow, Mode=TwoWay}" TextWrapping="Wrap"  HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="575,281,0,0" Height="109" Width="175" Background="#FFFBE400"/>
        <Button Content="Tilbage" HorizontalAlignment="Left" Margin="34,389,0,0" VerticalAlignment="Top" Width="75" Click="Btn_AdminReturnInstructorsWindow_Click"/>
        <TextBox x:Name="tb_AdminInstructorID" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Instructor.InstructorID, Mode=TwoWay, UpdateSourceTrigger=Explicit}" VerticalAlignment="Top" Width="120" Margin="293,57,0,0"/>
        <Label Content="Indtast medlemsnr:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="155,54,0,0" Width="117"/>
        <Button Content="Slet instruktør" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="414,370,0,0" Click="Btn_DeleteInstructor_Click"/>
    </Grid>
</Window>
